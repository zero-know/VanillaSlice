{
  "$schema": "http://json.schemastore.org/template",
  "author": "ZKnowledge Framework",
  "classifications": ["Web", "Entity Framework", "Data Layer"],
  "identity": "ZKnowledge.ServerData.Template",
  "name": "ZKnowledge Server Data Layer Template",
  "shortName": "zkn-serverdata",
  "sourceName": "{{ProjectName}}.Server.Data",
  "preferNameDirectory": true,
  "symbols": {
    "RootNamespace": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "{{ProjectName}}.Server.Data",
      "replaces": "{{RootNamespace}}",
      "description": "The root namespace for the server data project"
    },
    "ProjectName": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "MyProject",
      "replaces": "{{ProjectName}}",
      "description": "The name of the project"
    },
    "TargetFramework": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "net9.0",
      "replaces": "{{TargetFramework}}",
      "description": "The target framework for the project"
    },
    "IncludeAuthentication": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Microsoft Identity integration"
    },
    "IncludeSampleData": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include sample Product entity and related configurations"
    }
  }
}
