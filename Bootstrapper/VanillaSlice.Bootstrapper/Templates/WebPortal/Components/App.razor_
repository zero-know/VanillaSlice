<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    {{#if (eq UIFramework "Bootstrap")}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    {{/if}}

    {{#if (eq UIFramework "MudBlazor")}}
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    {{/if}}

    {{#if (eq UIFramework "Radzen")}}
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    {{/if}}

    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["{{ProjectName}}.WebPortal.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="PageRenderMode" />
</head>

<body>
    <Routes @rendermode="PageRenderMode" />
    <script src="_framework/blazor.web.js"></script>

    {{#if (eq UIFramework "Bootstrap")}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    {{/if}}

    {{#if (eq UIFramework "MudBlazor")}}
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    {{/if}}

    {{#if (eq UIFramework "Radzen")}}
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    {{/if}}
</body>

</html>
@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? PageRenderMode =>
        HttpContext.AcceptsInteractiveRouting() ? InteractiveWebAssembly : null;
}