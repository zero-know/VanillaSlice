<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="{{ProjectName}}.MauiNativeApp.Views.__ComponentPrefix__.__ComponentPrefix__ListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:{{ProjectName}}.MauiNativeApp.ViewModels.__ComponentPrefix__"
             xmlns:models="clr-namespace:{{ProjectName}}.ClientShared.Features.__ComponentPrefix__;assembly={{ProjectName}}.Client.Shared"
             x:DataType="viewmodel:__ComponentPrefix__ListPageViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding Add__ComponentPrefix__Command}" IconImageSource="add.png" />
        <ToolbarItem Text="Refresh" Command="{Binding Refresh__ComponentPrefix__sCommand}" IconImageSource="refresh.png" />
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search __ComponentPrefix__s..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding Search__ComponentPrefix__sCommand}"
                   HorizontalOptions="FillAndExpand"
                   Margin="15,10" />

        <!-- __ComponentPrefix__s List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding Refresh__ComponentPrefix__sCommand}">

            <CollectionView ItemsSource="{Binding Items}"
                            BackgroundColor="Transparent"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                        <Label Text="No __ComponentPrefix__s found"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                        <Label Text="Tap the + button to add your first __ComponentPrefix__"
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:__ComponentPrefix__ListingViewModel">
                        <Grid Padding="15,10">
                            <Frame BackgroundColor="White"
                                   HasShadow="True"
                                   CornerRadius="8"
                                   Padding="15">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0" VerticalOptions="Center">
                                        <Label Text="{Binding Name}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="Black" />

                                        <Label Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1" Orientation="Horizontal" VerticalOptions="Center">
                                        <Button Text="Edit"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:__ComponentPrefix__ListPageViewModel}}, Path=Edit__ComponentPrefix__Command}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="LightBlue"
                                                TextColor="DarkBlue"
                                                CornerRadius="5"
                                                Padding="10,5"
                                                FontSize="12" />

                                        <Button Text="Delete"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:__ComponentPrefix__ListPageViewModel}}, Path=Delete__ComponentPrefix__Command}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="LightCoral"
                                                TextColor="DarkRed"
                                                CornerRadius="5"
                                                Padding="10,5"
                                                FontSize="12"
                                                Margin="5,0,0,0" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                           IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>

</ContentPage>