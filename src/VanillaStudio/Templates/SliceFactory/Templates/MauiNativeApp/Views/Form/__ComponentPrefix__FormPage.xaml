<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="{{ProjectName}}.MauiNativeApp.Views.__ComponentPrefix__.__ComponentPrefix__FormPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:{{ProjectName}}.MauiNativeApp.ViewModels.__ComponentPrefix__"
             x:DataType="viewmodel:__ComponentPrefix__FormPageViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveCommand}" IconImageSource="save.png" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Form Fields -->
            <StackLayout Grid.Row="0" Spacing="20">

                <!-- Name Field -->
                <StackLayout>
                    <Label Text="Name" FontAttributes="Bold" />
                    <Entry Text="{Binding Model.Name}"
                           Placeholder="Enter __ComponentPrefix__ name"
                           BackgroundColor="White"
                           TextColor="Black" />
                    <Label Text="{Binding ValidationErrors[Name]}"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding ValidationErrors[Name], Converter={StaticResource StringToBoolConverter}}" />
                </StackLayout>

                <!-- Description Field -->
                <StackLayout>
                    <Label Text="Description" FontAttributes="Bold" />
                    <Editor Text="{Binding Model.Description}"
                            Placeholder="Enter __ComponentPrefix__ description"
                            HeightRequest="100"
                            BackgroundColor="White"
                            TextColor="Black" />
                    <Label Text="{Binding ValidationErrors[Description]}"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding ValidationErrors[Description], Converter={StaticResource StringToBoolConverter}}" />
                </StackLayout>

            </StackLayout>

            <!-- Action Buttons -->
            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="10" Margin="0,20,0,0">
                <Button Text="Save"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand" />

                <Button Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        CornerRadius="8"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>

            <!-- Loading Indicator -->
            <ActivityIndicator Grid.RowSpan="2"
                               IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               Color="{StaticResource Primary}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
        </Grid>
    </ScrollView>

</ContentPage>